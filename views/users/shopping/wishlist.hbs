<div class="shopping-cart-steps">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="cart-steps">
					<ul class="clearfix">
						<li class="active">
							<div class="inner">
								<span class="step">01</span> <span class="inner-step">Wishlist</span>
							</div>
						</li>


					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<!--shopping-cart area-->
<div class="shopping-cart-area">
	<div class="container">
		{{!-- {{#if SubTotal}} --}}
		<div class="row">
			<div class="col-sm-12">
				<div class="table-responsive">

					<table class="cart-table">
						<thead>
							<tr>
								<th>Image</th>
								<th>Product Name</th>
								<th>Price</th>
								<th>Add to Cart</th>

								
							</tr>
						</thead>
						<tbody>
							{{#each wishlistPro}}
							<tr>
								<td>

									<div class="cart-product-thumb">
										<a href="#"><img width="150" height="auto"
												src="https://zahraf.s3.amazonaws.com/{{this.product._id}}image.png" alt="" /></a>
									</div>

								</td>
								<td>
									<div class="cart-product-name">
										<h5><a href="#">{{this.product.name}}</a></h5>
									</div>
								</td>
								<td>
									{{#if this.product.offer}}
									<span class="cart-product-price">{{this.product.price}}</span>
									{{else}}
									<span class="cart-product-price">{{this.product.price}}</span>
									{{/if}}

								</td>
																<td><a onclick="addToCart('{{this.product._id}}')" class="btn btn-success">Add To Cart</a></td>

								

								<td>
									<div class="product-remove">
										<a onclick="removeWishlist('{{this._id}}','{{this.product._id}}')">
											<i class="fa fa-times" aria-hidden="true"></i>
										</a>
									</div>
								</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
				
			</div>
		</div>
		<div class="row mt-30">
			<div class="col-lg-6">
				<div class="cart-update">
					<a href="/" class="btn-common">CONTINUE SHOPPING</a>
				</div>
			</div>
			
		</div>

	</div>
</div>
