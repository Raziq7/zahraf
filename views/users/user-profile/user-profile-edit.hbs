    <div class="col-md-4">
      <div class="text-center">
        {{#if image}}
        <img src="https://zahraf.s3.amazonaws.com/{{getUser._id}}.png" class="avatar img-circle img-thumbnail" alt="avatar">
        {{else}}
        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="avatar img-circle img-thumbnail"
          alt="avatar">
          {{/if}}
        {{!-- <h6>Upload a different photo...</h6> --}}

        <div class="mt-3">
          <a href="/wishlist" class="btn1 btn-success"><span><i class="fas fa-shopping-cart"></i>My WishList</span></a>
        </div>
        <div class="mt-3">
          <a href="/showCart" class="btn1 btn-success"><span><i class="fas fa-shopping-cart"></i> My Cart</span></a>
        </div>
        <div class="mt-3">
          <a href="/product-details" class="btn1 btn-success"><span><i class="fas fa-shopping-cart"></i> My
              Orders</span></a>
