            <input class="form-control" type="text" value="{{getUser.name}}">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Phone</label>
          <div class="col-lg-8">
            <input class="form-control" type="tel" value="{{getUser.phone}}">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Email:</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="{{getUser.email}}">
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-3 control-label">Address:</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="{{getUser.address}}">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-8">
            <a href="/change-password" class="form-control btn-danger text-center text-white" type="button">Change
              Password</a>
          </div>
